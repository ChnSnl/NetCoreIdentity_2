@model UserRegisterRequestModel

<a  asp-controller="Home" asp-action="SignIn" class="btn btn-primary">Giriş Yap</a>

<form asp-controller="Home" asp-action="Register" method="post" class="p-3 w-75 m-auto">

    <div class="mb-3">
        <label>Kullanıcı İsmi Giriniz:</label>
        <span class="text-danger" asp-validation-for="UserName"></span>
        <input asp-for="UserName" class="form-control"/>
    </div>

    <div class="mb-3">
        <label>Şifre Giriniz:</label>
        <span class="text-danger" asp-validation-for="Password"></span>
        <input asp-for="Password" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Şifreyi tekrar Giriniz:</label>
        <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
        <input asp-for="ConfirmPassword" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Email adresi giriniz</label>
        <span class="text-danger" asp-validation-for="Email"></span>
        <input type="text" asp-for="Email" class="form-control" />
    </div>

    <div class="mb-3">
        <button class="btn btn-primary">Kayıt ol</button>
    </div>

    <div class="text-danger" asp-validation-summary="ModelOnly">
    </div>

</form>